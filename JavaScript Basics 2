    <script>
        var a = parseInt(prompt("Enter a no."));
        var b = parseInt(prompt("Enter a 2nd no."));
        var c = a + b;
        var d = a + b * c;
    
    </script>

    <p id="demo">HI!ARE YOU HERE FOR THE SOLUTIONS??</p>
    <p id="second"></p>

      <input type="button" id="btn1" value="SOLUTIONS" onClick="

        document.getElementById('demo').innerHTML = 'First Answer: ' + c;

        document.getElementById('second').innerHTML = 'Second Answer: ' + d;

        document.getElementById('btn1').hidden = true; " hidden class="b">

<!-- btn2 -->

        <input type="button" id="btn2" value="YES" onClick="
        document.getElementById('demo').innerHTML = 'CLICK ON THE SOLUTION TO KNOW YOUR ANSWERS!!';
        
        document.getElementById('btn2').hidden = true;

        document.getElementById('btn1').hidden = false; " class="b">


